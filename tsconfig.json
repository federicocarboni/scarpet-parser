{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "lib": ["ES2016", "ES2020.BigInt"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "./lib",
    "outDir": "./types",
    // stripInternal doesn't work for non .ts files
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["lib"]
}
